<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DebugType>embedded</DebugType>
	  <PublishAot>true</PublishAot>
	  <StripSymbols>true</StripSymbols>
	  <AnalysisLevel>latest-all</AnalysisLevel>
	  <EnablePreviewFeatures>True</EnablePreviewFeatures>
	  <Platforms>AnyCPU;x64</Platforms>
	  <Configurations>Debug;Release;TraceLeak</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="assets\fonts\font0.ff" />
    <None Remove="assets\fonts\font1.ff" />
    <None Remove="assets\scripts\test.lua" />
    <None Remove="assets\textures\env_o.dds" />
    <None Remove="assets\textures\irradiance_o.dds" />
    <None Remove="assets\textures\prefilter_o.dds" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="assets\fonts\font0.ff">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\fonts\font1.ff">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\scripts\test.lua">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\textures\env_o.dds">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\textures\irradiance_o.dds">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\textures\prefilter_o.dds">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>


	<ItemGroup>
	  <ProjectReference Include="..\HexaEngine\HexaEngine.csproj" />
	</ItemGroup>


	<ItemGroup>
	  <None Update="assets\textures\layer0.dds">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\textures\layer1.dds">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\textures\layer2.dds">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
