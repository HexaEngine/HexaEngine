<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>AnyCPU;x64</Platforms>
    <Configurations>Debug;Release;TraceLeak</Configurations>
	  
  </PropertyGroup>

	<ItemGroup>
		<Content Include="..\HexaEngine.DirectXTex.Native\build\Debug\DirectXTex.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="..\HexaEngine.DirectXTex.Native\build\Debug\DirectXTex.pdb">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<PackageReference Include="Silk.NET.Direct3D11" Version="2.16.0" />
		<PackageReference Include="Silk.NET.DXGI" Version="2.16.0" />
	</ItemGroup>

</Project>
