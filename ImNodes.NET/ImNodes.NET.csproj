<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Description>A .NET wrapper for the imnodes library.</Description>
		<AssemblyVersion>0.3.0</AssemblyVersion>
		<Authors>Eric Mellino</Authors>
		<TargetFrameworks>net7.0</TargetFrameworks>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<DebugType>portable</DebugType>
		<AssemblyName>ImNodes.NET</AssemblyName>
		<PackageId>ImNodes.NET</PackageId>
		<PackagePrereleaseIdentifier></PackagePrereleaseIdentifier>
		<PackageVersion>$(AssemblyVersion)$(PackagePrereleaseIdentifier)</PackageVersion>
		<PackageTags>imnodes ImGui ImGui.NET Immediate Mode GUI</PackageTags>
		<PackageProjectUrl>https://github.com/mellinoe/imgui.net</PackageProjectUrl>
		<RootNamespace>imnodesNET</RootNamespace>
		<Platforms>AnyCPU;x64</Platforms>
		<Configurations>Debug;Release;TraceLeak</Configurations>
	</PropertyGroup>
	<ItemGroup>
		<ProjectReference Include="..\ImGui.NET\ImGui.NET.csproj" />
	</ItemGroup>
	<ItemGroup>
		<Content Include="..\cimnodes\build\Debug\cimnodes.dll" Condition="'$(Configuration)'=='DEBUG'">
			<Link>runtimes\win-x64\native\%(RecursiveDir)%(Filename)%(Extension)</Link>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="..\cimnodes\build\Debug\cimnodes.pdb" Condition="'$(Configuration)'=='DEBUG'">
			<Link>runtimes\win-x64\native\%(RecursiveDir)%(Filename)%(Extension)</Link>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="..\cimnodes\build\bin\CMake\Release\cimnodes.dll" Condition="'$(Configuration)'=='RELEASE'">
			<Link>runtimes\win-x64\native\%(RecursiveDir)%(Filename)%(Extension)</Link>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="..\deps\cimgui\linux-x64\cimnodes.so">
			<PackagePath>runtimes/linux-x64/native</PackagePath>
			<Pack>true</Pack>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
</Project>
