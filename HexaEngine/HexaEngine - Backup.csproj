<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
	<DefineConstants>TRACE;DEBUG;D3D_DEBUG;D2D1_SUPPORT;DWRITE_SUPPORT;</DefineConstants>
	<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="BepuPhysics" Version="2.3.0" />
		<PackageReference Include="BepuUtilities" Version="2.3.0" />
		<PackageReference Include="System.Drawing.Common" Version="6.0.0" />
		<PackageReference Include="Vortice.D3DCompiler" Version="2.1.0-beta8" />
		<PackageReference Include="Vortice.Direct2D1" Version="2.1.0-beta8" />
		<PackageReference Include="Vortice.Direct3D11" Version="2.1.0-beta8" />
		<PackageReference Include="Vortice.Direct3D12" Version="2.1.0-beta8" />
		<PackageReference Include="Vortice.DirectX" Version="2.1.0-beta8" />
		<PackageReference Include="Vortice.Dxc" Version="2.1.0-beta8" />
		<PackageReference Include="Vortice.DXGI" Version="2.1.0-beta8" />
		<PackageReference Include="Vortice.Mathematics" Version="1.3.23" />
		<PackageReference Include="Vortice.XAudio2" Version="2.1.0-beta8" />
		<PackageReference Include="Vortice.XInput" Version="2.1.0-beta8" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="assets\shaders\color\PixelShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\color\VertexShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\common.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\deferred\DomainShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\deferred\HullShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\deferred\LightPixelShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\deferred\LightVertexShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\deferred\PixelShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\deferred\VertexShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\depth\PixelShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\depth\VertexShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\font\FontPixel.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\font\FontVertex.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\particle\ParticlePixelShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\particle\ParticleVertexShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\skybox\PixelShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\skybox\VertexShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\texture\PixelShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="assets\shaders\texture\VertexShader.hlsl">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Objects\Components\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\DirectXTexNet\DirectXTexNet.csproj" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
	  <Exec Command="xcopy /y /d  &quot;$(ProjectDir)x64\Debug\*.dll&quot; &quot;$(ProjectDir)$(OutDir)\runtimes\x64\native\&quot;" />
	</Target>
</Project>
