<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>AnyCPU;x64</Platforms>
	  <Configurations>Debug;Release;TraceLeak</Configurations>
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;GenericAttributes</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;GenericAttributes</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='TraceLeak|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;GenericAttributes</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
		<DefineConstants>$(DefineConstants)TRACE;GenericAttributes</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
		<DefineConstants>$(DefineConstants)TRACE;GenericAttributes</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='TraceLeak|x64'">
		<DefineConstants>$(DefineConstants)TRACE;GenericAttributes</DefineConstants>
	</PropertyGroup>
  <ItemGroup>
    <None Remove="assets\editor\textures\env_o.dds" />
    <None Remove="assets\editor\textures\irradiance_o.dds" />
    <None Remove="assets\editor\textures\prefilter_o.dds" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="assets\editor\textures\env_o.dds">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\editor\textures\irradiance_o.dds">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\editor\textures\prefilter_o.dds">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HexaEngine\HexaEngine.csproj" />
</ItemGroup>

	<Target Name="PublishPackAssets" AfterTargets="Publish">
		<Exec Command="$(SolutionDir)AssetsBundler\bin\x64\Debug\net7.0\AssetsBundler.exe -m gen -c -l 3 -p $(ProjectDir)$(PublishDir)assets\" />
	</Target>
  <ItemGroup>
    <None Update="imgui.ini">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
