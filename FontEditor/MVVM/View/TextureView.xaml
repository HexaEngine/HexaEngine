<UserControl x:Class="FontEditor.MVVM.View.TextureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FontEditor.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local:BaseDataContext}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="{Binding CurrentTexture, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Null}}" RenderOptions.BitmapScalingMode="NearestNeighbor" HorizontalAlignment="Left" VerticalAlignment="Top" />
    </Grid>
</UserControl>