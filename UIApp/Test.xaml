<UIWindow
    xmlns="http://hexaengine.com/ui/v0/xaml"
    Name="Window" Title="MainWindow" Height="720" Width="1280" Background="#2C2C2CFF">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Label HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF0000">Test</Label>
		<Label Grid.Column="1" Foreground="#FFFFFF">Test2</Label>
		<Label Grid.Column="2" Grid.Row="1" Foreground="#FFFFFF">Test3</Label>
		<StackPanel>
			<Label Margin="15,0,0,0" Foreground="#FFFFFF" FontSize="86" FontFamilyName="Cascadia Mono">StackItem 1</Label>
			<Label Margin="30,0,0,0" Foreground="#FFFFFF" FontSize="10"  FontFamilyName="Cascadia Mono">StackItem 2</Label>
			<Label Margin="45,0,0,0" Foreground="#FFFFFF"  FontFamilyName="Cascadia Mono">StackItem 3</Label>
			<TextBox MinWidth="100" MinHeight="40" WordWrapping="Wrap" />
		</StackPanel>
		<Button Grid.Column="2">Test Button</Button>
	</Grid>
</UIWindow>