<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<DebugType>embedded</DebugType>
		<Configurations>Debug;Release;TraceLeak</Configurations>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;SEPA;PROFILE;</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='TraceLeak|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
		<DefineConstants>$(DefineConstants)TRACE;</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='TraceLeak|x64'">
		<DefineConstants>$(DefineConstants)TRACE;Debug</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;PROFILE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
		<DefineConstants>$(DefineConstants)TRACE;PROFILE</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Graphics\Passes\**" />
	  <EmbeddedResource Remove="Graphics\Passes\**" />
	  <None Remove="Graphics\Passes\**" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="HexaEngine.ImGui" Version="2.0.11" />
		<PackageReference Include="HexaEngine.ImGuizmo" Version="2.0.11" />
		<PackageReference Include="HexaEngine.ImNodes" Version="2.0.11" />
		<PackageReference Include="HexaEngine.ImPlot" Version="2.0.11" />
		<PackageReference Include="HexaEngine.SPIRVCross" Version="1.1.0" />
		<PackageReference Include="HexaEngine.Shaderc" Version="1.2.0" />
		<PackageReference Include="Silk.NET.GLFW" Version="2.17.1" />
		<PackageReference Include="Silk.NET.SDL" Version="2.17.1" />
		<PackageReference Include="BepuPhysics" Version="2.4.0" />
		<PackageReference Include="Newtonsoft.Json.Bson" Version="1.0.2" />
		<PackageReference Include="K4os.Compression.LZ4.Streams" Version="1.3.5" />
		<PackageReference Include="System.IO.Hashing" Version="7.0.0" />
		<PackageReference Include="YamlDotNet" Version="13.1.1" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\HexaEngine.Mathematics\HexaEngine.Mathematics.csproj" />
	</ItemGroup>
</Project>
