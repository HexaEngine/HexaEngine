<Project>
  <PropertyGroup>
    <CopyNativeAssemblies_SPIRVCross Condition="'$(CopyNativeAssemblies_SPIRVCross)' == ''">true</CopyNativeAssemblies_SPIRVCross>
  </PropertyGroup>

  <ItemGroup Condition="'$(CopyNativeAssemblies_SPIRVCross)' == true">
